pipeline {
    agent any
    triggers {
        pollSCM('*/1 * * * *')
        upstream(upstreamProjects: 'docker-base', threshold: hudson.model.Result.SUCCESS)
    }
    stages {
        stage('build') {
            steps {
                echo "Building node application"
            }
        }
        stage('deploy-dev') {
            steps {
                script{
                    deploy("DEV")
                }
            }
        }
        stage('test-dev') {
            steps {
                script{
                    test("DEV")
                }
            }
        }
        stage('deploy-int') {
            steps {
               script{
                    deploy("INT")
                }
            }
        }
        stage('test-int') {
            steps {
                script{
                    test("INT")
                }
            }
        }
        stage('deploy-prd') {
            steps {
                script{
                    deploy("PRD")
                }
            }
        }
        stage('test-prd') {
            steps {
                script{
                    test("PRD")
                }
            }
        }
    }
}

def deploy(String enviroment){
    echo "Deployment on ${enviroment} enviroment triggered..."
}
def test(String enviroment){
    echo "Runing test on ${enviroment} enviroment..."
}